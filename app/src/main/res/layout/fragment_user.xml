<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserFragment">

    <ImageView
        android:id="@+id/userAvatarIv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black_200"
        app:layout_constraintEnd_toEndOf="@+id/userAvatarIv"
        app:layout_constraintStart_toStartOf="@+id/userAvatarIv"
        app:layout_constraintTop_toBottomOf="@+id/userAvatarIv"
        tools:text="Scott Fitzgerald" />


    <TextView
        android:id="@+id/htmlUrlTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/userNameTv"
        app:layout_constraintStart_toStartOf="@+id/userNameTv"
        app:layout_constraintTop_toBottomOf="@+id/userNameTv"
        tools:text="https://github.com/scottfz90" />

    <Button
        android:id="@+id/goToProfileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Github Profile"
        app:layout_constraintEnd_toEndOf="@+id/htmlUrlTv"
        app:layout_constraintStart_toStartOf="@+id/htmlUrlTv"
        app:layout_constraintTop_toBottomOf="@+id/htmlUrlTv" />

</androidx.constraintlayout.widget.ConstraintLayout>